{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "view:allow-view",
    "dialog:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        },
        { "path": "$HOME/**" },
        {
          "path": "/**"
        },
        { "path": "$HOME/.config/**" }
      ]
    },
    "fs:read-all",
    "fs:read-meta",
    "fs:write-files",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-copy-file",
    "android-fs:default",
    "clipboard-manager:allow-write-text",
    "opener:default",
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "path": "*"
        }
      ]
    },
    "store:default",
    "sharetarget:default",
    "log:default",
    "log:default",
    "sql:default",
    "sql:allow-execute",
    "os:default"
  ]
}